
<div id="<%= dom_id friend %>">

<div class="row align-items-md-stretch">
      <div class="col-md-6">
        <div class="h-100 p-5 text-bg-dark rounded-3">
          <h2><%= friend.first_name %> <%= friend.last_name %></h2>
          <p>
          <%= friend.email %>  |
          <%= friend.phone %>  |
          <%= friend.twitter %>
          </p>
          <br/>
          <% if user_signed_in? %>
          <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  <br/> <br/>
          <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>

      </div>

</div>

<% end  %>

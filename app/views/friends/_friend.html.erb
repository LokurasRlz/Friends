<div id="<%= dom_id friend %>" class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card h-100 text-bg-dark rounded-3">
        <div class="card-body">
          <h2 class="card-title"><%= friend.first_name %></h2>
          <h2 class="card-title"><%= friend.email %></h2>
          <p class="card-text">
            <%= friend.phone %>  |
            <%= friend.twitter %>
          </p>
          <br/>

          <!-- Link to Inspeccion -->
          <div class="mt-3">
            <%= link_to "Inspeccion", 'https://drive.google.com/file/d/17c8w4RQqzhwNHNiLA7cIuQ20YXpkqRxZ/view?usp=sharing', target: "_blank", class: "btn btn-primary" %>
          </div><br/>

      

          <% if user_signed_in? %>
            <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
            <%= link_to "Volver", friends_path, class:"btn btn-secondary" %>
            <br/> <br/>
            <%= button_to "Destroy", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          <% end %>

                  </div>
      </div>
    </div>
  </div>
</div>

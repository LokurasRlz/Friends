<div id="<%= dom_id tool %>" class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card h-100 text-bg-dark rounded-3">
        <div class="card-body">
          <h2 class="card-title text-primary"><%= tool.clase %></h2> <br/>
          <h2 class="card-title">ID: <%= tool.id_tool %></h2>
          <h2 class="card-title">Precinto: <%= tool.precinto %></h2> <br/>
          <h4 class="card-text">
            Pin: <%= tool.pin %> <br/>
            Box: <%= tool.box %> <br/> <br/>
            Fecha de Uso: <%= tool.date_of_use %> | Fecha de Vencimiento: <%= tool.date_due_to %> <br/>
            Dias Faltantes: <%= tool.days_left %> <br/>

          </p>
          <br/>

          <!-- Link to Inspeccion -->
          <div class="mt-3">
            <%= link_to "Inspeccion", 'https://drive.google.com/file/d/17c8w4RQqzhwNHNiLA7cIuQ20YXpkqRxZ/view?usp=sharing', target: "_blank", class: "btn btn-primary" %>
          </div><br/>

      

          <% if user_signed_in? %>
            <%= link_to "Edit", edit_tool_path(@tool), class:"btn btn-secondary" %>
            <%= link_to "Volver", tools_path, class:"btn btn-secondary" %>
            <br/> <br/>
            <%= button_to "Destroy", @tool, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          <% end %>

                  </div>
      </div>
    </div>
  </div>
</div>

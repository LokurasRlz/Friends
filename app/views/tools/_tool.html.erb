<div id="<%= dom_id tool %>" class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card h-100 text-bg-dark rounded-3">
        <div class="card-body">
          <h2 class="card-title text-primary"><%= tool.clase %></h2> <br/>
          <h2 class="card-title">ID: <%= tool.id_tool %></h2>
          <h2 class="card-title">Precinto: <%= tool.precinto %></h2> <br/>
          <h4 class="card-text">
            Pin: <%= tool.pin %> <br/>
            Box: <%= tool.box %> <br/> <br/>
            <div class="mt-3">

            
            <% if user_signed_in? %>
             <%= form_with(model: tool, url: tool_path(tool), method: :patch, local: true, html: { class: "update-date-form" }) do |form| %>
              <%= form.hidden_field :authenticity_token %>
             <div class="form-group">
             <%= form.label :date_of_use, "Actualizar Fecha de Uso:" %>
             <%= form.date_field :date_of_use, class: "form-control" %>
             </div> <br/>

             
             <%= form.submit "Actualizar", class: "btn btn-primary" %>
              
             <% end %>

             <div class="mt-3">
             <%= button_to "Reset", update_date_of_use_tool_path(tool), method: :patch, params: { reset_date_of_use: true }, class: "btn btn-warning" %>
           </div>
            <% end %>
             
             
             <br/>
             
            
            Fecha de Uso: <%= tool.date_of_use %> <br/>
            Fecha de Vencimiento: <%= tool.date_due_to %> <br/> 
           

          </p>
          <br/>

          <!-- Link to Inspeccion -->
          <div class="mt-1">
          <%= link_to "Inspeccion", tool.link_to_pdf, target: "_blank", class: "btn btn-success" %>
        </div><br/>

      

          <% if user_signed_in? %>
          <% if current_user.admin? || @tool.user == current_user %>
          
            <%= link_to "Edit", edit_tool_path(@tool), class:"btn btn-secondary" %> <br/> <br/>
            
            <%= button_to "Destroy", @tool, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          <% end %>
        <% end %>

          <div class="mt-3">
          <%= link_to "Volver", tools_path, class:"btn btn-primary" %>
        </div><br/>

                  </div>
      </div>
    </div>
  </div>
</div>
